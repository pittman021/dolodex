<section class="hero is-small is-primary is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        MyCRM
      </h1>
      <h2 class="subtitle">
        Welcome back, <%= @user.name %>
      </h2>
    </div>
  </div>
</section>

<section class="section contacts-events">

  <div class="columns">
    <div class="column is-narrow">
      <div class="content box">
        <h4>Upcoming Birthdays</h4>
        <% @birthdays.each do |b| %>
      <p><%= b.first_name %> <%= b.last_name %>: <%= Date::MONTHNAMES[b.birthday_month] %> <%= b.birthday_day %></p>
        <% end %>
        <h2>Upcoming Events</h2>

    </div>
  </div>
    <div class="column">
      <section class="contacts-table">
      	<div class="container">
          <div class="columns">
            <div class="column is-4 is-offset-8">
              <%= link_to "Add New Contact", new_contact_path, method: :get, class: 'button' %>
          </div>
        </div>
      		<table class="table" id="contacts-table">
        		<thead>
        			<tr>
        				<th>First Name</th>
        				<th>Last Name</th>
        				<th>Address</th>
        				<th>Birthday</th>
        				<th>Wedding Ann.</th>

        				<th>View</ht>
        			</tr>
        		</thead>
        		<tbody>
        		<% @contacts.each do |contact| %>
        			<tr>
        				<td><%= contact.first_name %></td>
        				<td><%= contact.last_name %></td>
        				<td><%= contact.address %></td>
        				<td> <%= Date::MONTHNAMES[contact.birthday_month] %> <%= contact.birthday_day %></td>
        				<td><%= contact.wedding_anniversary %> </td>

        				<td><%= link_to "View", contact_path(contact) %>
        			</tr>
        		<% end %>
        		</tbody>
    		  </table>
        </div>
      </section>

    </div>
  </div>
</section>
