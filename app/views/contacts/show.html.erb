<div class="section">

<div class="container">
	<div class="columns">
		<div class="column">
	<div class="content">

	<h1><%=  @contact.first_name %> <%= @contact.last_name %></h1>
		<p>Date of Birth: <%= @contact.date_of_birth %>
		<p>Address: <%= @contact.address %></p>
		<p>Wedding Anniversary: <%= @contact.wedding_anniversary %>

		<ul>
		<% @contact.gifts.each do |gift| %>
			<li><%= gift.title %>: <%= gift.url %></li>

		<% end %>
	</ul>

	</div>
</div>
<div class="column">
	<a href="#"><img src="http://via.placeholder.com/350x200"></a>
</div>
</div>

	<%= link_to "Edit", edit_contact_path(@contact.id) %>
	<%= link_to "Delete", contact_path(@contact.id), method: :delete %>

</div>
</section>
